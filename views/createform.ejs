<%- include('partials/header') -%>

<div class="container">
	<div class="row">
	
		<h1 style="text-align:center">
			Create new campground
		</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Add name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Add price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Add image" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Add description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-large btn-block btn-primary">Submit</button>
				</div>
				
				
			</form>
			
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
</div>


	
<%- include('partials/footer') -%>