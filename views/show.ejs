<%- include('partials/header') -%>


<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p>
				Yelpcamp
			</p>
			<div class="list-group">
			<li class="list-group-item active">Info 1</li>
			<li class="list-group-item">Info 2</li>
			<li class="list-group-item">Info 3</li>	
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src=<%= campgrounds.image %>>
				<div class="caption-full">
					<h4 class="pull-right">$<%= campgrounds.price %>/night</h4>
					<h4>
						<a><%= campgrounds.name %></a>
					</h4>
					<p>
						<%= campgrounds.description %>
					</p>
					
					<p>
						
						<em>created by <%= campgrounds.author.username %></em>
					</p>
					
					<% if(currentUser!=undefined && campgrounds.author.id.equals(currentUser._id)) { %>
				
					<a class="btn btn-xs btn-warning" href="/campgrounds/<%= campgrounds._id %>/edit">
						Update
					</a>
					<form id="deleteForm" action="/campgrounds/<%= campgrounds._id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">
							Delete
						</button>
					</form>
					
					<% } %>
				</div>
			</div>
			
			<div class="well">
				<div class="text-right">
					<a class="btn btn-default btn-success" href="/campgrounds/<%= campgrounds._id %>/comment/new">New comment</a>
				</div>
				<hr>
				<% for(var i=0;i<campgrounds.comments.length;i++){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= campgrounds.comments[i].author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= campgrounds.comments[i].text %>
							</p>
							<% if(currentUser && campgrounds.comments[i].author.id.equals(currentUser._id)){ %>
							
							<a href="/campgrounds/<%= campgrounds._id %>/comment/<%= campgrounds.comments[i]._id %>/edit" class="btn btn-primary btn-xs">Edit</a>
							<form id="deleteForm" action="/campgrounds/<%= campgrounds._id %>/comment/<%= campgrounds.comments[i]._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger btn-xs">
									Delete
								</button>
							</form>
							
							<% } %>
						</div>	
					</div>
				
					
				
					
	
				<% } %>
			</div>
		</div>
		
	</div>
</div>




	 



<%- include('partials/footer') -%>